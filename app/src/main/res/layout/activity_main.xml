<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbckgrd"

    tools:context="com.example.ashutosh.reminderapp.MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:background="@drawable/img_topbg"
       android:id="@+id/actionbar"

       >
       <Button
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_centerVertical="true"
           android:background="@drawable/side_nav_icon"
           android:layout_marginLeft="15dp"
           android:id="@+id/navicon"
           />
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/addbutton"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="20dp"
           android:id="@+id/addbutton"

           />
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/search_icon_one"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/addbutton"
           android:layout_marginRight="15dp"
           />
   </RelativeLayout>
</RelativeLayout>
